    "prepublishOnly": "yarn test",
    "commit": "gitmoji -c",
    "c": "gitmoji -c"
  },
  "devDependencies": {
    "@types/node": "^13.9.1",
    "gitmoji-cli": "^3.2.3",
    "@hasparus/microbundle": "0.12.0-next.9x"
